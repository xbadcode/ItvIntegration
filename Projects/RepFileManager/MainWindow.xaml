<Window x:Class="RepFileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор REP файла"
        Height="300" Width="300"
        Closing="OnClosing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Сгенерировать" Width="100" Click="Button_Click" Margin="2" Name="button1" />
        <TextBox Grid.Row="1" Name="DeviceCommands" Margin="2" />
    </Grid>
</Window>